
<%if @story.completed%>
<div class="text-center">
    <h2>This story has been completed and can no longer be added to.</h2>
</div>
<%else%>
<div class="d-flex justify-content-center">
    <form class="col-lg-6" action="/stories/<%=@story.id%>" method="POST">
        <input type="hidden" name='_method' value='PATCH'>
        <div class="form-group"> 
            <label for="word"></label>
            <input type="text" class="form-control" name="word" id="word" placeholder="Add one word to the story." pattern=".*$" title="Only one word is allowed.">
            
        </div>

        
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Add Word</button>
        </div>
    </form>
</div>
<%end%>


<div>
    <h1><%=@story.title%></h1>
    <%if @author%>
        <h3>By: <%="#{@author.first_name} #{@author.last_name}"%></h3>
    <%end%>
    <p><%=@story.text%></p>
</div>

<%if logged_in? && @story.author_id == current_user.id%>
<hr>
<div class="story-actions">
    
    <div class="container">
        <div class="row">
            <div class="col">
                <%if @story.completed%>
                <form  action="/stories/incomplete/<%=@story.id%>" method="POST">
                    <input type="hidden" name='_method' value='PATCH'>
                    
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Make Incomplete</button>
                    </div>
                </form><br>
                <div class="text-center">
                    <p>Making this story incomplete will make it editable by other users.</p>
                </div>

                <%else%>
                <form  action="/stories/complete/<%=@story.id%>" method="POST">
                    <input type="hidden" name='_method' value='PATCH'>
                    
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Complete Story</button>
                    </div>
                </form><br>
                <div class="text-center">
                    <p>Completing this story will make it so other users can no longer edit it.</p>
                </div>
                <%end%>
            </div>
            <div class="col">    
                <div class="text-center">
                    <a class="btn btn-primary" href="/stories/<%=@story.id%>/edit" role="button">Edit Story</a>
                </div>
            </div>
            <div class="col">
                <form  action="/stories/delete/<%=@story.id%>" method="POST">
                    <input type="hidden" name='_method' value='DELETE'>
                    
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary delete">Delete Story</button>
                    </div>
                </form>
            </div>    
        </div>    
    </div>

</div>
<%end%>