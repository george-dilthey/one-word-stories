<div class="d-flex justify-content-center">
    <form class="col-lg-6" action="/stories/<%=@story.id%>" method="POST">
        <input type="hidden" name='_method' value='PATCH'>
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" name="title" id="title" value="<%=@story.title%>">
            
        </div>
        <div class="form-group">
            <label for="text">Text</label>
            <textarea rows="20" type="textarea" class="form-control" name="text" id="text"><%=@story.text%></textarea>
            
        </div>
        
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>