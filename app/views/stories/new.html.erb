<%if logged_in?%>
<div class="d-flex justify-content-center">
    <form class="col-lg-6" action="/stories method="POST">
        <input type="hidden" name='author_id' value='<%=current_user.id%>'>
        <input type="hidden" name='completed' value=false>

        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" name="title" id="title">
            
        </div>
        <div class="form-group">
            <label for="text">Text</label>
            <textarea rows="20" type="text" class="form-control" name="text" id="text"></textarea>
            
        </div>
        
        <button type="submit" class="btn btn-primary">Create Story</button>
    </form>
</div>
<%else%>
<div class="container ">
        <div class="row">
            <div class="col">
                <div class="text-center">
                    <h2>You must be logged in to create a story.</h2>
                </div>
            </div>
        </div>
        <div class="row justify-content-around login-signup">
            
            <div class="col">    
                <div class="text-right">
                    <a class="btn btn-primary" href="/login" role="button">Log in</a>
                </div>
            </div>
            <div class="col">    
                <div class="text-left">
                    <a class="btn btn-primary" href="/signup" role="button">Sign up</a>
                </div>
            </div>
             
        </div>    
    </div>
<%end%>
